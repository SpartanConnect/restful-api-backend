{

    "plugins": [
        "spellcheck"
    ],

    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "spellcheck/spell-checker": [1, {
            "comments":true,
            "strings":true,
            "identifiers":false,
            "lang":"en_US"
        }],

        "indent": [
            "warn",
            4,
            {"SwitchCase": 1}
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "camelcase": [
            "warn",
            {"properties": "always"}
        ],
        "no-console": [
            "off"
        ],
        "linebreak-style":[
            "off"
        ],
        "no-unused-vars":"off"
    }
}